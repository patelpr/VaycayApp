extends layout

block body
    .row
        .col-12
            .darkbg
                h2 VAYCAY
            .card
                h2= title
                p.warn= message
                .login
                
                    form(action="/login", method="post")
                        label.lbl(for="email") Email
                        input(type="text" id="email" name="email")
                        label.lbl(for="password") Password
                        input(type="password" id="password" name="password")
                        input.btn(type="submit", value="Log In >")
                    a(href="/register") Sign Up Here
               p= 'Sorry that email and password dont match.'